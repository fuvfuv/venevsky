.product-prev
  a(href="").product-prev__header
    .product-prev__marks
      .product-prev__mark.product-prev__mark--bg-yellow -45%
      //- .product-prev__mark.product-prev__mark--bg-green Хит
    img(src="images/content/products/product-prev-2.jpg", alt="превью товара").product-prev__img

  a(href="").product-prev__body
    .product-prev__title 
      span.product-prev__name Мягкий кусочек алюминия для стыковки 30x30x2000 мм, толщина 0.2, цвет серенький
      span.count-text 10
    .product-prev__info
      span.product-prev__info-label Артикул
      span.product-prev__info-value 13764551
    .product-prev__info
      span.product-prev__info-label Срок изготовления
      span.product-prev__info-value от 1 до 3 дней
