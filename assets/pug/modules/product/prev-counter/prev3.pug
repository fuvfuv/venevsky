.product-prev
   a(href="").product-prev__header
      .product-prev__marks
         .product-prev__mark.product-prev__mark--bg-yellow -20%
         .product-prev__mark.product-prev__mark--bg-green Хит
      img(src="images/content/products/product-prev-3.jpg", alt="превью товара").product-prev__img

   .product-prev__body
      a(href="#").product-prev__title
         span.product-prev__name Планка стыковачная 30x30x2000 мм, толщина 0.4, цвет грифтовый
         span.count-text 10
      .product-prev__info--wrapper
         .product-prev__info
            span.product-prev__info-label Артикул
            span.product-prev__info-value 13764551
         .product-prev__info.product-prev__info--wide
            span.product-prev__info-label Срок изготовления
            span.product-prev__info-value от 2 до 3 дней
      .product-prev__price
         span.product-prev__price-old 80 руб.
         span.product-prev__price-current 20 руб. за шт

   .product-prev__footer
      .counter.product-prev__counter
         .counter__btn.counter__btn--minus
            +icon('minus', 'counter__icon')
         .counter__current
            span.counter__current-text 1
            span.counter__current-descr шт.
         .counter__btn.counter__btn--plus
            +icon('plus', 'counter__icon')
      button.btn.btn--fill.btn--product
         +icon('shopping-cart', 'btn__icon')
         span В корзину
