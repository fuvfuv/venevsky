header.header
   .header-top
      .container
         include ./location
         include ../navigation/main-nav
         .user-nav.header-top__user-nav
            a(href="#popup-login").user-nav__link.link-green.js-popup-link Войти

   .header-main
      .container
         include ../navigation/mobile-nav

         if (pageClass === 'index-page')
            .logo.header-main__logo
               img(src="images/general/logo.svg", alt="logo" width="64" height="40").logo__img
               span.logo__text Продажа строй материалов
         else
            a(href="index.html").logo.header-main__logo
               img(src="images/general/logo.svg", alt="logo" width="64" height="40").logo__img
               span.logo__text Продажа строй материалов

         include ../navigation/catalog-nav
         .header-actions
            .search.header-main__search
               input(type="text" placeholder="Артикул или название товара").input-field.input-field--size-small
               +icon('search', 'search__icon')
            a(href="#").header-phone-mobile.header-main__header-phone-mobile
               +icon('phone', 'header-phone-mobile__icon')
            .order-callback.header-main__order-callback
               span.order-callback__description Звоните круглосуточно
               a(href="tel:+74993348888").order-callback__phone +7 499 334-88-88
               a(href="#popup-consultation").js-popup-link.order-callback__link.link-white.link-underline Заказать звонок
            include ../basket/basket-prev
