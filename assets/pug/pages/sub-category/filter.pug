mixin checkboxLine(text, count, color, type)
   li.filter-list__item
      .checkbox
         input(type="checkbox" id="" + type)
         label(for="" + type).checkbox__custom
         .checkbox__body
            if (color)
               span.checkbox__text=text
               .color-block(style=`background-color: ${color}`)
            else
               span.checkbox__text=text
      span.count-text=count

.tab.tab-filter
   .filter
      .filter__header
         span.filter__title Фильтр
      .filter__body

         .filter-tooltip
            span.filter-tooltip__text Найдено <b>456 </b>товаров
            span.filter-tooltip__btn Показать
         .filter-item
            .filter-item__header
               span.filter-item__title Цена за шт.
            .filter-item__body
               .filter-slider
                  .filter-slider__values
                     input.input-field.input-field--size-s.filter-slider__value.filter-slider__value--from
                     .filter-slider__value
                     .filter-slider__value--from
